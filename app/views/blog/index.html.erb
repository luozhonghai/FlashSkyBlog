
<section id="posts">
<%  @articles.each do |article|  %>		
			<article class="post">
				<header>
					<h2><%= article.title  %></h2>
          <h4>Published <%= article.created_at.localtime.strftime("%B %d %X %Y") %></h4>
				</header>
				<%= truncate(strip_tags(article.content), length: 500) %>
				<footer>
					<!-- <a href="article_view.html"><i>2 Comments</i></a> -->
					<%= link_to article.comments.count.to_s+" Comments ", article_show_url(name: User.find_by_id(session[:blog_id]).name, article_id: article) %>
				</footer>
			</article>		
<% end %>
</section>
