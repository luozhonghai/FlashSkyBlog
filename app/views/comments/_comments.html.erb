<h3>COMMENTS</h3>
     <% current_view_obj.comments.each do |comment| %>
      <section class="comment">
            <p><%= comment.description  %></p>
            <footer>
            	<p><%= link_to comment.user, blog_path(name: comment.user)%> <%= "-----"+comment.created_at.localtime.strftime("%B %d %X %Y") %></p>
            </footer>
      </section>
<% end %>